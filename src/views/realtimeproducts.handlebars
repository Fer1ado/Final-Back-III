<div>


<div class="container">
    <h1>Crear Nuevo Producto</h1>
    <br/>
<form id="addForm" style="margin-right: 8rem">
    <div class="row mb-4">
        <div class="col-4 mb-3 " style="text-align: right;">
            <label class="form-label" for="title">Title</label>
            <input type="text" required name="title">
        </div>
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="description">Description</label>
            <input type="text" required name="description">
        </div>
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="category">Category</label>
            <input type="text" required name="category">
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="price">Price</label>
            <input type="number" required name="price">
        </div>
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="thumbnail">Thumbnail</label>
            <input type="text" required name="thumbnail">
        </div>
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="stock">Stock</label>
            <input type="number" required name="stock">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="code">Code</label>
            <input type="text" required name="code">
        </div>
        <div class="col-4 mb-3" style="text-align: right;">
            <label for="code">status</label>
            <input type="text" required name="status" value="true" readonly="readonly">
        </div>
    </div>


    <div class="row">
        <div class="col-12" style="text-align: right;">
            <button class="btn btn-success" type="submit">Enviar</button>
        </div>
    </div>
</form><br><br>


{{!-- FORMULARIO DE ELIMINACION DE PRODUCTOS --}}
<h1>Eliminar un Producto</h1>

<form id="removeForm" >
    <div class="row">
        <div class="col-4 mb-3">
            <label for="code">Product ID</label>
            <input type="text" required name="code">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button class="btn btn-danger" type="submit">Enviar</button>
        </div>
    </div>
</form>
<br><br><br>

<h1>Listado Completo</h1>
<table id="productsTable" class="table" action="/api/products" method="get">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Título</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Código</th>
            <th scope="col">Stock</th>
            <th scope="col">Estado</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

</div>

</div>